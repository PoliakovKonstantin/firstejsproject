        <tr><input type="text" value="<%=arr[id].description%>" name='description'></tr>
        <tr><input type="text" value="<%=arr[id].authors%>" name='authors'></tr>
        <tr><input type="text" value="<%=arr[id].favorite%>" name='favorite'></tr>
